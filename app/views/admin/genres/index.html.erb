<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-6 mt-5'>
      <h3 class="mt-3">ジャンル一覧・追加</h3>
        <div class="m-2">
          <%=form_with model: @genre,url: admin_genres_path, method: :post do |f| %>
            <%= f.label :"ジャンル名", class: "mr-3" %>
            <%= f.text_field :name, class: "mr-5" %>
            <%= f.submit'新規登録',class: "btn btn-primary" %>
          <% end %>
          </div>

          <table class='table table-hover table-inverse mt-3'>
            <thead>
              <tr>
                <th>ジャンル</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @genres.each do |genre| %>
                <tr>
                  <td><%= genre.name %></td>
                  <td>
                    <%= link_to edit_admin_genre_path(genre) do %>
                      <button type="button" class="btn btn-info">編集する</button>
                    <% end %>
                  </td>
                 </tr>
              <%end%>
            </tbody>
          </table>
    </div>
  </div>
</div>
