<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <h2>管理者ログイン</h2>
      <div class="col-12 mx-auto">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        
          <div class="row">
            <div class="col-sm-10">
             <%= f.label :"メールアドレス", class: "" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" class:"form-control form-control-lg" id:"colFormLabelLg" placeholder:"col-form-label-lg" %>
            </div>
          </div>

          <div class="field form-group">
            <%= f.label :"パスワード" %><br />
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Log in" %>
          </div>
        <% end %>

        <%= render "admin/shared/links" %>
      </div>
    </div>
  </div>
</div>

