<div class="container">
  <div class="row main-row">
    <div class="col-6 mx-auto">
      <h3 class="title">管理者ログイン</h3>
        <%= form_with(model: resource, url: session_path(resource_name)) do |f| %>
        <%= render "admin/shared/error_messages", resource: resource %>
    
          <div class="field form-group row">
            <%= f.label :"メールアドレス", class: "col-form-label col-4" %>
            <div class="col-8">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
          </div>
    
            <div class="field form-group row">
              <%= f.label :"パスワード", class: "control-label col-4" %>
              <div class="col-md-8">
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
              </div>
            </div>
    
          <div class="actions col-5 offset-3">
            <div class="d-flex justify-content-center">
            <%= f.submit "Log in",class: "btn btn-success btn-md btn-block mt-3" %>
            </div>
          </div>
        <% end %>
          <%= render "admin/shared/links" %>
    </div>
  </div>
</div>