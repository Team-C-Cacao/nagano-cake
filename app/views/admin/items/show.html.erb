<div class="container">
  <div class="row main-row">
    <div class="col-12 mx-auto">
      <h2 class="title">商品詳細</h2>
      <div class="row">
        <div class="col-4">
          <%= image_tag @item.get_item_image(350,350) %>
        </div>
        <div class="col-7 offset-1">
          <div class="form-group row">
          <div class="col-4">
            <p class="font-weight-bold">商品名</p>
          </div>
          <div class="col-8">
            <%= @item.name %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-4">
            <p class="font-weight-bold">商品説明</p>
          </div>
          <div class="col-8">
            <%= @item.description %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-4">
            <p class="font-weight-bold">ジャンル</p>
          </div>
          <div class="col-8">
            <%= @item.genre.name %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-4">
            <p class="font-weight-bold">税込価格<br>(税抜価格)</p>
          </div>
          <div class="col-8">
            <!--現在の税率10%を適用中-->
            <% tax_rate = 0.1 %>
            <%= number_to_currency(display_including_tax_price(@item.excluding_tax_price, tax_rate), delimiter: ',', unit: '', precision: 0 ) %>
            (<%= number_to_currency(@item.excluding_tax_price, delimiter: ',', unit: '', precision: 0 ) %>) 円
          </div>
        </div>
        <div class="form-group row">
          <div class="col-4">
            <p class="font-weight-bold">販売ステータス</p>
          </div>
          <div class="col-8">
            <% if @item.is_active %>
              <p class="text-info">販売中</p>
            <% else %>
              <p class="text-danger">販売停止中</p>
            <% end %>
          </div>
        </div>
        <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success mt-3" %>
        </div>
      </div>
    </div>
  </div>
</div>