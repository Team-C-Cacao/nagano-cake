<div class="container">
 <div class="row">
   <div class="col-12">
    <h2 class="col-5 mt-3 mb-3">会員一覧</h2>

    <div class="row mx-auto justify-content-center">
     <%= paginate @customers,theme: 'page' %>
    </div>

    <table class="table table-hover">
     <tr>
       <th class="bg-success">会員ID</th>
       <th class="bg-success">氏名</th>
       <th class="bg-success">メールアドレス</th>
       <th class="bg-success">ステータス</th>
     </tr>
     <% @customers.each do |customer| %>
     <tr>
       <td><%= customer.id %></td>
       <td>
         <%= link_to admin_customer_path(customer.id) do %>
         <%= customer.last_name %><%= customer.first_name %>
         <% end %>
       </td>
       <td><%= customer.email %></td>
       <td>
         <% if customer.is_active == true %>
         <strong class="text-primary">有効</strong>
         <% else %>
         <strong class="text-danger">退会</strong>
         <% end %>
       </td>
     </tr>
     <% end %>
    </table>
    <div class="row mx-auto justify-content-center">
     <%= paginate @customers,theme: 'page' %>
    </div>
  </div>
 </div>
</div>