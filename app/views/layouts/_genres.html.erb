<table class="table border">
  <thead>
    <tr>
      <th><h4 style="text-shadow: 0px 0px 10px white;"><strong>ジャンル検索</strong></h4></th>
    </tr>
  </thead>
  <% genres.each do |genre| %>
    <tbody>
      <tr>
        <td style="text-align: left; color: #4e454a;">
          <%= link_to genre.name, items_path(genre_id: genre.id), method: :get, class: "text-decoration-none" %>
        </td>
        <td style="text-align: right; color: #4e454a;">
          <%= genre.items.count %>
        </td>
      </tr>
    </tbody>
  <% end %>
</table>