<div class="container px-5 px-sm-0">
  <div class="row justify-content-center">
    <div class="col-md-9 mt-4">
      <h2>商品一覧</h2>
        <div class="items d-flex flex-wrap">
            <% @items.each do |item| %>
              <div class="item_image m-4">
                <%= link_to item_path(item) do %>
                  <%= image_tag item.get_item_image(150,110) %><br>
                  <%= item.name %><br>
                  <%= item.excluding_tax_price %> 円<br>
                <% end %>
              </div>
            <% end %>
        </div>
             <div class="page">
              <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center flex gap-x-1">
                  <li class="page-item"><a class="page-link" href="/items">1</a></li>
                  <li class="page-item"><a class="page-link" href="/items?page=2">2</a></li>
                  <li class="page-item"><a class="page-link" href="/items?page=3">3</a></li>
                  <li class="page-item"><a class="page-link" href="/items?page=2">Next</a></li>
                  <li class="page-item"><a class="page-link" href="/items?page=2">Last</a></li>
                </ul>
              </nav>
             </div>

    </div>
  </div>
</div>
