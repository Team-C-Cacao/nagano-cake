<div class="container px-5 px-sm-0">
  <div class="row mt-4" style="margin-top: 100px;">
    <div class="col-2">
      <%= render 'layouts/genres', genres: @genres %>
    </div>
    <div class="col-md-9 offset-md-1">
      <!--ジャンル検索結果-->
      <% if @genre.present? %>
        <h2><%= @genre.name %>一覧（全<%= @items.count %>件）</h2>
      <% else %>
      <!--通常商品一覧-->
        <h2>商品一覧</h2>
      <% end %>
        <div class="items d-flex flex-wrap">
            <% @items.each do |item| %>
              <div class="item_image m-4">
                <%= link_to item_path(item) do %>
                  <%= image_tag item.get_item_image(150,110) %><br>
                  <%= item.name %><br>
                <% end %>
                <%= number_to_currency(item.excluding_tax_price, delimiter: ',', format: '¥ %n', precision: 0) %>
              </div>
            <% end %>
        </div>
        <div class="row justify-content-center">
          <%= paginate @items, theme: 'page' %>
        </div>
    </div>
  </div>
</div>
