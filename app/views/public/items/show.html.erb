<div class="container px-5 px-sm-0">
  <div class="row justify-content-center">
    <div class="col-md-10 offset-md-2 mt-4">
        <div class="row items mt-5">
          <div class="col-md-5">
            <%= image_tag @item.get_item_image(320,210) %><br>
          </div>

          <div class="col-md-6">
            <h3 class="font-weight-bold"><%= @item.name %></h3>
            <div class="mt-3 ml-3"><%= @item.description %></div>
            <div class="font-weight-bold mt-5 ml-3">
              <%= number_to_currency(@item.excluding_tax_price, delimiter: ',', format: '¥ %n', precision: 0) %>(税込)
            </div>

            <div class="form-group row float-right mt-5">
              <%= form_with model: @cart_item, url: cart_items_path, method: :post do |form| %>
                <%= form.hidden_field :item_id, value: @item.id %>
                <%= form.select :amount, (1..20), { prompt: '個数選択' } %>
                <%= form.submit 'カートへ入れる', class: 'btn btn-success' %>
              <% end %>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>
