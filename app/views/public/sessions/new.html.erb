<div class="container">
  <div class="row">
    <div class="col-12">
     <h4><strong>ログイン</strong></h4>
      <strong>会員の方はこちらからログイン</strong>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
     <div class="field row mb-4">
     <%= f.label :email,"メールアドレス",class: "col-3" %>
     <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "col-3" %>
     </div>

     <div class="field row">
     <%= f.label :password,"パスワード",class: "col-3" %>
     <%= f.password_field :password, autocomplete: "current-password",class: "col-3" %>
     </div>
     <div class="actions mt-5">
     <%= f.submit "ログイン",class: "btn btn-primary" %>
     </div>
     <% end %>

  <strong>会員登録がお済みでない方</strong>
<%= render "public/shared/links" %>
  </div>
 </div>
</div>
