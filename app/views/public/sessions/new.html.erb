<div class="container">
  <div class="row">
    <div class="col-12 mx-auto">
     <h4 class="mb-4"><strong>ログイン</strong></h4>
      <strong>会員の方はこちらからログイン</strong>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
     <div class="form-row mt-4">
    <span class="form-group col-3">メールアドレス</span>
     <div class="form-group col-6">
      <%= f.text_field :email, class: "form-control" %>
     </div>
    </div>

     <div class="form-row">
    <span class="form-group col-3">パスワード(6文字以上)</span>
    <div class="form-group col-6">
     <%= f.password_field :password, class: "form-control" %>
    </div>
  </div>
     <div class="actions form-group mt-5 justify-content:center; d-flex">
     <%= f.submit "ログイン",class: "btn btn-primary d-grid gap-2 col-4 mx-auto mb-3" %>
     </div>
     <% end %>

    <div class="text-center">
    <strong>会員登録がお済みでない方</strong><br>
     <%= render "public/shared/links" %>
     </div>
  </div>
 </div>
</div>
