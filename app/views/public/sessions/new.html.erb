<div class="container">
  <div class="row">
    <div class="col-12 mx-auto">
     <h4 class="mb-4"><strong>ログイン</strong></h4>
      <strong>会員の方はこちらからログイン</strong>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
     <div class="field form-group row mt-5 mb-4">
     <%= f.label :email,"メールアドレス",class: "col-3" %>
     <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "col-3" %>
     </div>

     <div class="field form-group row">
     <%= f.label :password,"パスワード",class: "col-3" %>
     <%= f.password_field :password, autocomplete: "current-password",class: "col-3" %>
     </div>
     <div class="actions form-group mt-5 justify-content:center; d-flex">
     <%= f.submit "ログイン",class: "btn btn-primary d-grid gap-2 col-4 mx-auto mb-3" %>
     </div>
     <% end %>

  <strong>会員登録がお済みでない方</strong>
<%= render "public/shared/links" %>
  </div>
 </div>
</div>
