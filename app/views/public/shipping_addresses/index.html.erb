<div class="container">
  <div class="row">
    <div class="col-10">
      <h2 class="mt-4">配送先登録/一覧</h2>
        <%= form_with model: ShippingAddress.new, local: true do |f| %>
        <div class="form-group col-10">
             <%= f.label :"郵便番号(ハイフンなし)" ,class: "col-4 control-label" %>
            <%= f.text_field :postal_code, class: "col-4 form-control-static postal_code" %>

          <div class="mt-3 form_grounp">
             <%= f.label :"住所" ,class: "col-4 control-label" %>
            <%= f.text_field :shipping_addresses, class: "col-6 form-control-static shipping_addresses" %>
          </div>

          <div class="mt-3 form_grounp">
             <%= f.label :"宛名" ,class: "col-4 control-label" %>
            <%= f.text_field :name, class: "col-4 form-control-static name" %>
          </div>
          <div class="justify-content-end d-flex">
          <%= f.submit :"登録" ,class: 'col-2  btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col-8">
      <table class="table table-bordered ">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th colspan="2"><br></br></th>
          </tr>
      
          <tr>
            <% @shipping_addresses.each do |shipping_address| %>
            <td><%= shipping_address.postal_code %></td>
            <td><%= shipping_address.shipping_addresses %></td>
            <td><%= shipping_address.name %></td>
            <td><%= link_to '削除する', @shipping_addresses, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@shipping_addresses.id}" %>   
                <%= link_to "編集する",edit_shipping_addresses_path(shipping_addresses), class: "btn-sm btn-primary" %></td>
            <% end %>
          </tr>
          
        </thead>
      </table>
    </div>
  </div>
</div>