<div class="container">
  <div class="row main-row">
    <div class="col-10">
      <div>
        <%= flash[:notice] %>
      </div>
      <h3 class="title">配送先編集</h3>
      <%= render 'public/shared/error_messages', resource: @shipping_address %>
      <%= form_with model: @shipping_address, method: :patch,url: shipping_address_path(@shipping_address), local: true do |f| %>
        <div class="form-row">
            <span class="form-group col-3">郵便番号(ハイフンなし)</span>
            <div class="form-group col-3">
             <%= f.text_field :postal_code, class: "form-control" %>
            </div>
          </div>

          <div class="form-row">
            <span class="form-group col-3">住所</span>
            <div class="form-group col-6">
             <%= f.text_field :shipping_address, class: "form-control" %>
            </div>
          </div>

          <div class="form-row">
            <span class="form-group col-3">宛名</span>
            <div class="form-group col-3">
             <%= f.text_field :name, class: "form-control" %>
            </div>
          </div>

          <div class="justify-content-end d-flex">
          <%= f.submit :"登録" ,class: 'col-2  btn btn-success' %>
          </div>
        <% end %>
    </div>
  </div>
</div>
