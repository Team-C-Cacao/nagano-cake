<div class="container">
  <div class="row">
    <div class="col-10">
      <div>
        <%= flash[:notice] %>
      </div>
      <h2 class="mt-4">配送先編集</h2>
        <%= form_with model: @shipping_address, local: true do |f| %>
        <%= render 'public/shared/error_messages', resource: @shipping_address %>
        <div class="form-group col-10">
             <%= f.label :"郵便番号(ハイフンなし)" ,class: "col-4 control-label" %>
            <%= f.text_field :postal_code, class: "col-4 form-control-static postal_code" %>

          <div class="mt-3 form_grounp">
             <%= f.label :"住所" ,class: "col-4 control-label" %>
            <%= f.text_field :shipping_address, class: "col-6 form-control-static shipping_address" %>
          </div>

          <div class="mt-3 form_grounp">
             <%= f.label :"宛名" ,class: "col-4 control-label" %>
            <%= f.text_field :name, class: "col-4 form-control-static name" %>
          </div>
          <div class="justify-content-end d-flex">
          <%= f.submit :"変更内容を保存" ,class: 'col-3  btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
