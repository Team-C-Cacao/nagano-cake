<div class="container">
  <div class="row">
    <div class="col-8 mx-auto mt-5">
      <h2 class="d-flex fustify-content-start mb-5">注文情報入力</h2>
        <%= form_with model: Order.new, url: confirm_orders_path, method: :get do |f|  %>
          <!--支払方法パターン1-->
          <!--<div class="form-group row">-->
          <!--    <div class="col-md-3">-->
          <!--      <%= f.label :payment_methods, "支払方法" %>-->
          <!--    </div>-->
          <!--    <div class="col-md-6">-->
          <!--      <%= f.radio_button :payment_methods, Order.payment_methods.key(0) %>-->
          <!--      <%= f.label :payment_methods, Order.payment_methods_i18n[:credit_card], value: Order.payment_methods.key(0) %>-->

          <!--      <%= f.radio_button :payment_methods, Order.payment_methods.key(1) %>-->
          <!--      <%= f.label :payment_methods, Order.payment_methods_i18n[:transfer], value: Order.payment_methods.key(1) %>-->
          <!--    </div>-->
          <!--</div>-->

          <!--支払方法パターン2-->
          <div class="form-group row">
            <h5 class="col-md-3 font-weight-bold">支払い方法</h5>
              <div class="col-md-6">
                <%= f.radio_button :payment_method, :credit_card, checked: true %>
                <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card], {value: :credit_card} %>
                <br>
                <%= f.radio_button :pay_method, :transfer %>
                <%= f.label :payment_method, Order.payment_methods_i18n[:transfer], {value: :transfer} %>
              </div>
          </div>

          <div class="form-group row">
            <h5 class="col-md-3 font-weight-bold"><%= f.label :address, "お届け先" %></h5>
              <div class="col-md-6">
                <%= f.radio_button :address, "customer_address", checked: true %>
                <%= f.label :address, "ご自身の住所" %><br>
                〒<%= current_customer.postal_code + "　" + current_customer.address + "　" + current_customer.first_name + current_customer.first_name %>
              </div>
          </div>

          <div class="form-group row">
              <div class="col-md-3"></div>
              <div class="col-md-6">
                <%= f.radio_button :address, [:registered_address] %>
                <%= f.label :address, "登録済住所から選択" %>
                <%= f.select :shipping_address_id, current_customer.shipping_addresses.all.map { |m| [[m.postal_code, m.address, m.name].join(" "), m.id] } ,include_blank: "登録してある配送先住所から選択" %>
              </div>
          </div>

          <div class="form-group row">
              <div class="col-md-3"></div>
              <div class="col-md-7">
                <%= f.radio_button :address, "new_address" %>
                <%= f.label :address, "新しいお届け先" %>
                <table>
                  <tr>
                    <td>郵便番号(ハイフンなし)</td>
                    <td class="ml-2"><%= f.text_field :new_postal_code %></td>
                  </tr>
                  <tr>
                    <td>住所</td>
                    <td><%= f.text_field :new_address %></td>
                  </tr>
                  <tr>
                    <td>宛名</td>
                    <td><%= f.text_field :new_name %></td>
                  </tr>
                </table>
              </div>
          </div>

          <div class="form-group row justify-content-center">
              <div class="col-md-6">
                <%= f.submit "確認画面へ進む", class: "btn btn-info" %>
              </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>