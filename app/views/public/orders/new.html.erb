<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto mt-5">
      <h2 class="d-flex fustify-content-start mb-5 form-horizontal">注文情報入力</h2>
        <%= form_with model: Order.new, url: confirm_orders_path, method: :post do |f|  %>

          <div class="form-group row">
            <h5 class="col-md-3 font-weight-bold">支払い方法</h5>
              <div class="col-md-8">
                <%= f.radio_button :payment_method, :credit_card, checked: true, name: 'payment_method' %>
                <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card], { value: :credit_card } %>
                <br>
                <%= f.radio_button :payment_method, :transfer, name: 'payment_method' %>
                <%= f.label :payment_method, Order.payment_methods_i18n[:transfer], { value: :transfer } %>
              </div>
          </div>

          <div class="form-group row">
            <h5 class="col-md-3 font-weight-bold"><%= f.label :address, "お届け先" %></h5>
              <div class="col-md-8">
                <%= f.radio_button :address, "customer_address", checked: true, name: 'address' %>
                <%= f.label :address, "ご自身の住所" %><br>
                〒<%= current_customer.postal_code + "　" + current_customer.address + "　" + current_customer.last_name + current_customer.first_name %>
              </div>
          </div>

          <div class="form-group row">
              <div class="col-md-3"></div>
              <div class="col-md-8">
                <%= f.radio_button :address_type, :shipping_address, name: 'address' %>
                <%= f.label :address_type, "登録済住所から選択" %><br>
                <%= f.select :shipping_address_id, current_customer.shipping_addresses.all.map { |m| [[m.postal_code, m.shipping_address, m.name].join(" "), m.id] } ,include_blank: "登録してある配送先住所から選択" %>
              </div>
          </div>

          <div class="form-group form-row">
              <div class="col-md-3"></div>
              <div class="col-md-8">
                <%= f.radio_button :address, "new_address", name: 'address' %>
                <%= f.label :address, "新しいお届け先" %>
                <div class="form-row">
                  <div class="col-md-6 mb-3">
                     <label class="col-form-label">郵便番号(ハイフンなし)</label>
                     <%= f.text_field :new_postal_code, class:"form-control", placeholder:"0000000" %>
                  </div>
                </div>

                <div class="form-row">
                  <div class="col-md-10 mb-3">
                     <label class="col-form-label">住所</label>
                     <%= f.text_field :new_address, class:"form-control", placeholder:"東京都渋谷区代々木神園町0-0" %>
                  </div>
                </div>

                <div class="form-row">
                  <div class="col-md-6 mb-3">
                     <td><label class="col-form-label">宛名</label></td>
                     <td><%= f.text_field :new_name, class:"form-control", placeholder:"令和道子" %></td>
                  </div>
                </div>
            </div>
          </div>

          <div class="form-group row justify-content-center">
              <div class="col-md-6">
                <%= link_to confirm_orders_path do %>
                  <%= f.submit "確認画面へ進む", class: "btn btn-info" %>
                <% end %>
              </div>
          </div>

        <% end %>
    </div>
  </div>
</div>

